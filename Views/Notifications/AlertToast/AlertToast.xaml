<Window x:Class="CryptoPrice.Views.Notifications.AlertToast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alert"
        Width="320" Height="90"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_Click">

    <Border x:Name="ToastBorder"
            CornerRadius="10"
            Background="#EE1E1E2E"
            BorderThickness="2"
            BorderBrush="#FF4CAF50"
            Padding="14,10"
            Cursor="Hand">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Alert icon -->
            <TextBlock Grid.Column="0"
                       Text="&#xE7BA;"
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="26"
                       Foreground="#FF4CAF50"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"
                       x:Name="AlertIcon"/>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           Text="Price Alert"
                           Foreground="White"
                           FontFamily="Segoe UI"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="MessageText"
                           Text=""
                           Foreground="#CCFFFFFF"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
