<Window x:Class="CryptoPrice.Views.Dialogs.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Color"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E2E"
        WindowStyle="ToolWindow">

    <StackPanel Margin="14">

        <StackPanel Orientation="Horizontal">

            <!-- Saturation / Value canvas -->
            <Border BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="2">
                <Canvas x:Name="SvCanvas" Width="256" Height="256"
                        Background="Transparent" ClipToBounds="True"
                        MouseLeftButtonDown="SvCanvas_MouseDown"
                        MouseMove="SvCanvas_MouseMove"
                        MouseLeftButtonUp="SvCanvas_MouseUp">
                    <Image x:Name="SvImage" Width="256" Height="256"
                           IsHitTestVisible="False"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <Ellipse x:Name="SvCursor" Width="14" Height="14"
                             Stroke="White" StrokeThickness="2"
                             Fill="Transparent" IsHitTestVisible="False">
                        <Ellipse.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="3" Color="Black"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>
            </Border>

            <!-- Hue bar -->
            <Border BorderBrush="#44FFFFFF" BorderThickness="1" CornerRadius="2"
                    Margin="10,0,0,0">
                <Canvas x:Name="HueCanvas" Width="24" Height="256"
                        Background="Transparent" ClipToBounds="True"
                        MouseLeftButtonDown="HueCanvas_MouseDown"
                        MouseMove="HueCanvas_MouseMove"
                        MouseLeftButtonUp="HueCanvas_MouseUp">
                    <Image x:Name="HueImage" Width="24" Height="256"
                           IsHitTestVisible="False"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    <Border x:Name="HueCursor" Width="28" Height="6"
                            Canvas.Left="-2"
                            Background="Transparent"
                            BorderBrush="White" BorderThickness="2"
                            CornerRadius="2" IsHitTestVisible="False">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="3" Color="Black"/>
                        </Border.Effect>
                    </Border>
                </Canvas>
            </Border>

        </StackPanel>

        <!-- Preview + Hex -->
        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
            <Border x:Name="ColorPreview" Width="40" Height="32"
                    CornerRadius="4" Background="White"/>
            <TextBox x:Name="HexBox" Width="110" Margin="10,0,0,0"
                     FontFamily="Segoe UI" FontSize="14"
                     Padding="6,4" VerticalAlignment="Center"
                     Background="#FF2A2A3E" Foreground="White"
                     BorderBrush="#55FFFFFF" CaretBrush="White"
                     TextChanged="HexBox_TextChanged"/>
        </StackPanel>

    </StackPanel>
</Window>
