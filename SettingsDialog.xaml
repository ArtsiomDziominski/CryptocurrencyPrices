<Window x:Class="CryptoPrice.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widget Settings"
        Width="400" Height="490"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF1E1E2E"
        WindowStyle="ToolWindow">

    <StackPanel Margin="18,14,18,14">

        <!-- ── Background Color ───────────────────────── -->
        <TextBlock Text="Background Color"
                   Foreground="#CCFFFFFF" FontFamily="Segoe UI"
                   FontSize="12" FontWeight="SemiBold"
                   Margin="0,0,0,6"/>

        <!-- Color palette -->
        <WrapPanel x:Name="BgPalette" Margin="0,0,0,8"/>

        <!-- Hex input + preview -->
        <Grid Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="36"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="BgHexBox"
                     FontFamily="Segoe UI" FontSize="13"
                     Padding="6,4"
                     Background="#FF2A2A3E" Foreground="White"
                     BorderBrush="#55FFFFFF" CaretBrush="White"
                     TextChanged="BgHexBox_TextChanged"/>
            <Border x:Name="BgPreview" Grid.Column="1"
                    Width="32" Height="28" CornerRadius="4"
                    Margin="4,0,0,0" Background="#CC1A1A2E"
                    Cursor="Hand" ToolTip="Pick color"
                    MouseLeftButtonDown="BgPreview_Click"/>
        </Grid>

        <!-- Opacity -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="Opacity:" Foreground="#99FFFFFF"
                       FontFamily="Segoe UI" FontSize="12"
                       VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock x:Name="OpacityLabel" Text="80%"
                       Foreground="White" FontFamily="Segoe UI"
                       FontSize="12" VerticalAlignment="Center"/>
        </StackPanel>
        <Slider x:Name="OpacitySlider"
                Minimum="0" Maximum="100" Value="80"
                TickFrequency="10" SmallChange="5"
                Foreground="#4C8BF5"
                Margin="0,0,0,16"
                ValueChanged="OpacitySlider_ValueChanged"/>

        <!-- ── Font Color ─────────────────────────────── -->
        <TextBlock Text="Price Font Color"
                   Foreground="#CCFFFFFF" FontFamily="Segoe UI"
                   FontSize="12" FontWeight="SemiBold"
                   Margin="0,0,0,6"/>

        <!-- Color palette -->
        <WrapPanel x:Name="FgPalette" Margin="0,0,0,8"/>

        <!-- Hex input + preview -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="36"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="FgHexBox"
                     FontFamily="Segoe UI" FontSize="13"
                     Padding="6,4"
                     Background="#FF2A2A3E" Foreground="White"
                     BorderBrush="#55FFFFFF" CaretBrush="White"
                     TextChanged="FgHexBox_TextChanged"/>
            <Border x:Name="FgPreview" Grid.Column="1"
                    Width="32" Height="28" CornerRadius="4"
                    Margin="4,0,0,0" Background="White"
                    Cursor="Hand" ToolTip="Pick color"
                    MouseLeftButtonDown="FgPreview_Click"/>
        </Grid>

        <!-- ── Display toggles ────────────────────────── -->
        <TextBlock Text="Display"
                   Foreground="#CCFFFFFF" FontFamily="Segoe UI"
                   FontSize="12" FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <CheckBox x:Name="ChkNavigation"
                  Content="Symbol navigation (← →)"
                  Foreground="#CCFFFFFF" FontFamily="Segoe UI" FontSize="12"
                  IsChecked="True" Margin="0,0,0,6"
                  Checked="Visibility_Changed" Unchecked="Visibility_Changed"/>
        <CheckBox x:Name="ChkSymbolLabel"
                  Content="Current symbol name"
                  Foreground="#CCFFFFFF" FontFamily="Segoe UI" FontSize="12"
                  IsChecked="True" Margin="0,0,0,6"
                  Checked="Visibility_Changed" Unchecked="Visibility_Changed"/>
        <CheckBox x:Name="ChkChange24h"
                  Content="24h price change"
                  Foreground="#CCFFFFFF" FontFamily="Segoe UI" FontSize="12"
                  IsChecked="True" Margin="0,0,0,6"
                  Checked="Visibility_Changed" Unchecked="Visibility_Changed"/>
        <CheckBox x:Name="ChkRunAtStartup"
                  Content="Run at Windows startup"
                  Foreground="#CCFFFFFF" FontFamily="Segoe UI" FontSize="12"
                  IsChecked="False" Margin="0,0,0,16"
                  Checked="RunAtStartup_Changed" Unchecked="RunAtStartup_Changed"/>

        <!-- ── Close ──────────────────────────────────── -->
        <Button Content="Close" Width="80"
                HorizontalAlignment="Right"
                Click="Close_Click" IsCancel="True"
                Background="#FF3A3A4E" Foreground="White"
                BorderBrush="#44FFFFFF" Padding="4"
                FontFamily="Segoe UI"/>

    </StackPanel>
</Window>
